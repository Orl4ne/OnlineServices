@model OS.Common.AssessementServices.TransfertObjects.QuestionPropositionTO

@{
    ViewData["Title"] = "Add Proposition";
}

<h1>Add new proposition</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProposition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@Model.Id" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                <input asp-for="QuestionId" class="form-control" value="@Model.QuestionId" readonly />
                <span asp-validation-for="QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libelle.English" class="control-label"></label>
                <input asp-for="Libelle.English" class="form-control" />
                <span asp-validation-for="Libelle.English" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libelle.French" class="control-label"></label>
                <input asp-for="Libelle.French" class="form-control" />
                <span asp-validation-for="Libelle.French" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libelle.Dutch" class="control-label"></label>
                <input asp-for="Libelle.Dutch" class="form-control" />
                <span asp-validation-for="Libelle.Dutch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@Html.ActionLink("Back", "GetAllForms", null, null, new { @class = "btn btn-primary btn-md" })

