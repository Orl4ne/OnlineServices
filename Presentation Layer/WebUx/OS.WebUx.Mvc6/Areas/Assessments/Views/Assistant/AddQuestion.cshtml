@model OS.Common.AssessementServices.TransfertObjects.QuestionTO
@using OS.Common.AssessementServices.Enumerations

@{
    ViewData["Title"] = "Add a new Question";
}

<h1>Add Question in form</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@Model.Id" readonly/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormId" class="control-label"></label>
                <input asp-for="FormId" class="form-control" value="@Model.FormId" readonly/>
                <span asp-validation-for="FormId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libelle.English" class="control-label"></label>
                <input asp-for="Libelle.English" class="form-control" />
                <span asp-validation-for="Libelle.English" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libelle.French" class="control-label"></label>
                <input asp-for="Libelle.French" class="form-control" />
                <span asp-validation-for="Libelle.French" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libelle.Dutch" class="control-label"></label>
                <input asp-for="Libelle.Dutch" class="form-control" />
                <span asp-validation-for="Libelle.Dutch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Type</label>
                @Html.DropDownListFor((Model => Model.Type),Html.GetEnumSelectList(typeof(QuestionType)),new {@class = "form-control"})
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" readonly/>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetFormById" asp-route-id="@Model.FormId">Back to List</a>
</div>

